<div class="row-item-main">
    <form asp-action="Game" method="post" class="row-container">
        <div class="main-title">#Добавить свой комментарий:</div>
        <div class="outLine">
            <input asp-for="@Model.newComment.Name" class="outLine-input"  placeholder="Ваше имя">

            <input asp-for="@Model.newComment.Gmail" class="outLine-input"  placeholder="Ваш e-mail(необизательно)">


        </div>

        <textarea asp-for="@Model.newComment.Text" class="TextCom" placeholder="Ваш комментарий"></textarea>

        <div style="padding-bottom: 15px;"><input class="com-bnt" type="submit" value="Добавить" input></div>
    </form>
</div>

@{
    foreach (var els in Model.allComment)
    {
        <div class="row-item-main">
            <div class="row-container">
                <img class="commentar-img" src="~/img/noavatar.png">
                <div class="commentar-content">
                    <div class="commentar-Title">@els.Name</div>
                    <div class="commentar-Text">@els.Text</div>
                </div>
            </div>
        </div>
    }
}